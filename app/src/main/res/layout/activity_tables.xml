<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_learn"
    android:orientation="vertical"
    tools:context=".activity_tables">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/imgBack"
            android:onClick="onLeftClick"
            android:layout_marginLeft="7dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TABLOLAR"
            android:fontFamily="@font/boogaloo_regular"
            android:layout_centerInParent="true"
            android:textColor="#f8f8f8"
            android:textSize="30dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:background="@drawable/bg_tables"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv1"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="1 - 1 = 0"
                    android:textSize="25dp"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv2"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="2 - 1 = 1"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv3"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="3 - 1 = 2"
                    android:textSize="25dp"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv4"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="4 - 1 = 3"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv5"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="5 - 1 = 4"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:background="@drawable/bg_tables"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv6"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="6 - 1 = 5"
                    android:textSize="25dp"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv7"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="7 - 1 = 6"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv8"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="8 - 1 = 7"
                    android:textSize="25dp"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv9"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="9 -1 = 8"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv10"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/boogaloo_regular"
                    android:text="10 - 1 = 9"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>






        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btn1"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="2"/>

        <Button
            android:id="@+id/btn3"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="3"/>

        <Button
            android:id="@+id/btn4"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="4"/>

        <Button
            android:id="@+id/btn5"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_tables_selector"
            android:text="5"/>








    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn6"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:clickable="true"
            android:onClick="onClick"
            android:text="6" />
        <Button
            android:id="@+id/btn7"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="7"/>

        <Button
            android:id="@+id/btn8"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="8"/>

        <Button
            android:id="@+id/btn9"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_tables_selector"
            android:text="9"/>

        <Button
            android:id="@+id/btn10"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_tables_selector"
            android:text="10"/>








    </LinearLayout>





</LinearLayout>




